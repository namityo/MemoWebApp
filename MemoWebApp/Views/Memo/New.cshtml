@{
    ViewData["Title"] = "New Memo";
}

<h1>New Memo</h1>

<form asp-controller="Memo" asp-action="Create" method="post">
    <div class="form-group">
        <label for="memoTitle">title</label>
        <input type="text" class="form-control" id="memoTitle" name="title" placeholder="title">
    </div>
    <div class="form-group">
        <label for="memoText">textarea</label>
        <textarea class="form-control" id="memoText" name="text" rows="10"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

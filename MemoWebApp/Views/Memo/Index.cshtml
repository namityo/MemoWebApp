@model System.IO.FileInfo[]
@{
}

<h1>Memo List</h1>

<div class="list-group">
    @foreach (var file in Model)
    {
        <a asp-controller="Memo" asp-action="Show" asp-route-filename="@file.Name" class="list-group-item list-group-item-action">@file.Name</a>
    }
</div>
